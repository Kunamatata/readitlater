<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Read It Later!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="{{ asset('/css/bootstrap-3-3-63.min.css') }}" />
                <link rel="stylesheet" href="{{ asset('/css/style.css') }}" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>

    </head>
    <body>
    <div class="form-link" id="form-link">
        <i class="fa fa-times close-popup"></i>
        <form action="{{ path('add_link') }}" method="post" id="article-form">
            <input type="text" name="url" placeholder="Your link" required/>
            <input type="submit" value="Save" name="save" id="save-article-btn"/>
        </form>
    </div>
    <div class="form-category" id="form-folder">
        <i class="fa fa-times close-popup"></i>
        <form action="{{ path('add_folder') }}" method="post">
            <input type="text"  name="Folder Name" placeholder="Folder name" required/>
            <input type="submit" value="Save" name="Folder Save"/>
        </form>
    </div>
    <nav class="navbar navbar-default">
    <ul class="nav navbar-nav navbar-left">
        <li><a href="#" id="get-archived" data-archived="false">Archived</a></li>
        <li><a href="#" id="add-link" title="Add Link">Add Link</a></li>
        <li><a href="#" id="add-folder" title="Add Folder">Add Folder</a></li>
    </ul>
    </nav>
    <div id="category-container">
        {{ render(controller(
            'AppBundle:Folder:getCategories'
        )) }}
    </div>
    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <div id="popup-category">
    {{ render(controller(
        'AppBundle:Folder:getCategoriesForPopUp'
    )) }}
    </div>
    <script type="text/javascript" src=" {{ asset('/js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
